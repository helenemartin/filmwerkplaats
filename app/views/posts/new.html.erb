<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, t("post.form.title") %><br />
    <%= f.text_area :title %>
  </div>
  <div class="field">
    <%= f.label :tag_list, t("post.form.tag") %><br />
    <%= f.autocomplete_field :tag_list, autocomplete_tag_name_posts_path, 'data-delimiter' => ',' %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_area :url %>
  </div>
  <div class= "field">
        <p><%= f.label :photo %></p>
        <p><%= f.file_field :photo %></p>
  </div>
  <div class= "field">
        <p><%= f.label :video %></p>
        <p><%= f.file_field :video %></p>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>